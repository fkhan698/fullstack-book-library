
<h2 class="page-header"><%= book.title %></h2>
<div class="book-details"></div>
      <img class="book-cover" src="<%= book.coverImagePath %>" alt="">
      <div class="book-details-grid">
            <div class="book-details-label">Author: <%=book.author.name %></div>
            <div class="book-details-label">Description: <%= book.description %></div>
            <div class="book-details-label">Date Created: <%= book.createdAt.toLocaleDateString('en-US')%></div>
            <div class="book-details-label">Page Count: <%= book.pageCount %></div>
      </div>
      
</div>



<div class="btn-row">
      <%- include('../partials/deleteForm', { url: `/books/${book.id}` }) %>
      <a class="btn btn-primary" href="/books/<%= book.id %>/edit"> Edit Book </a>
      <a class="btn btn-primary" href="/authors/<%= book.author.id %>">View Author</a> 
</div>

